{
  "name": "@unifed/backend-federation-server",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "ava": "^3.13.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@unifed/backend-core": "^0.1.0",
    "class-transformer": "^0.3.1",
    "express": "^4.17.1",
    "express-async-router": "^0.1.15",
    "mongoose": "^5.10.9"
  },
  "scripts": {
    "start": "node build/app.js",
    "start:watch": "tsc-watch --noClear -b --onSuccess 'yarn start'",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "nyc ava 'src/**/*.test.ts'",
    "test:integration": "ava 'integration/**/*.test.ts'",
    "build": "tsc -b",
    "clean": "rm -rf coverage build .nyc_output",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix"
  },
  "ava": {
    "timeout": "1m",
    "files": [
      "!build/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
