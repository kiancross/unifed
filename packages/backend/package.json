  "scripts": {
    "start": "nyc node build/unifed.js",
    "start:watch": "nodemon --exec nyc ts-node src/unifed.ts",
    "test:unit": "nyc ava 'src/**/*.test.ts'",
    "test:integration": "ava 'integration/**/*.test.ts'",
    "build": "tsc",
    "clean": "rm -rf coverage build .nyc_output",
    "ts:lint": "eslint . --ext .ts",
    "ts:fix": "eslint . --ext .ts --fix"
  },
  "ava": {
    "timeout": "1m",
    "files": [
      "!build/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
