{
  "name": "@unifed/monorepo",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "checks": "yarn lint && yarn build && yarn test",
    "lint": "yarn workspaces foreach -vp run lint",
    "build": "yarn workspaces foreach -vpt run build",
    "test": "yarn workspaces foreach -vp run test",
    "fix": "yarn workspaces foreach -vp run fix",
    "coverage": "./scripts/generate-coverage-report",
    "container:start": "make -C scripts -f entry.mk start",
    "container:stop": "make -C scripts -f entry.mk stop",
    "container:restart": "make -C scripts -f entry.mk restart",
    "container:reset": "make -C scripts -f entry.mk reset",
    "container:logs": "make -C scripts -f entry.mk logs",
    "clean": "yarn workspaces foreach -vp run clean && rm -rf coverage && rm -rf packages/**/node_modules"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/eslint": "^7",
    "@types/prettier": "^2.1.6",
    "eslint": "^7.17.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "typescript": "^4.1.3"
  },
  "resolutions": {
    "sass-loader": "^10.0.5",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.3"
  }
}
