{
  "name": "@unifed/monorepo",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "checks": "yarn lint && yarn build && yarn test",
    "lint": "yarn workspaces foreach -vp run lint",
    "build": "yarn workspaces foreach -vpt run build",
    "test": "yarn workspaces foreach -vp run test",
    "lint": "yarn workspaces foreach -vp run fix",
    "coverage": "./scripts/generate-coverage-report",
    "container:start": "make -C scripts start",
    "container:stop": "make -C scripts stop",
    "container:restart": "make -C scripts restart",
    "container:reset": "make -C scripts reset",
    "clean": "yarn workspaces foreach -vp run clean && rm -rf coverage && rm -rf packages/**/node_modules"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "nyc": "^15.1.0"
  },
  "resolutions": {
    "sass-loader": "^10.0.5",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.3"
  }
}
